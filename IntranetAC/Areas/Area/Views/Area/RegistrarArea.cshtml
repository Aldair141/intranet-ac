@{
    ViewData["Title"] = "Registrar Área";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-icon" data-background-color="rose">
                <i class="material-icons">mail_outline</i>
            </div>
            <div class="card-content">
                <h4 class="card-title">@ViewData["Title"]</h4>
                <form method="#" action="#">
                    <div class="form-group label-floating">
                        <label class="control-label">Descripción</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">Unidad Longitud</label>
                        <select class="selectpicker" data-style="select-with-transition" title="::SELECCIONE::" data-size="3">
                            <option value="1">M2</option>
                            <option value="2">M</option>
                            <option value="3">Millas</option>
                        </select>
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">Longitud</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">Características</label>
                        <textarea class="form-control"></textarea>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="optionsCheckboxes"> Activo
                        </label>
                    </div>

                    <button type="submit" class="btn btn-fill btn-rose">Registrar Socio</button>
                </form>
            </div>
        </div>
    </div>
</div>