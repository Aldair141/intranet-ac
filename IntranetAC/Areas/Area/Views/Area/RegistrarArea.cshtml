@model IntranetAC.Areas.Area.Model.AreaModel
@{
    ViewData["Title"] = "Registrar Área";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-icon" data-background-color="rose">
                <i class="material-icons">mail_outline</i>
            </div>
            <div class="card-content">
                <h4 class="card-title">@ViewData["Title"]</h4>
                @*<form method="#" action="#">*@
                @using(Html.BeginForm("Insert", "Area", FormMethod.Post, new { @id = "frmRegistrar" }))
                {
                    <div class="form-group label-floating">
                        <label class="control-label">Descripción</label>
                        @Html.TextBoxFor(x => x.AreaDescripcion, new { @class = "form-control" })
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">Unidad Longitud</label>
                        @Html.DropDownListFor(x => x.UnidadLongitud, Model.UnidadesLongitud.Select(td => new SelectListItem(){
                            Text = td.AreaLongitudAbreviatura,
                            Value = td.AreaLongitudAbreviatura.ToString(),
                            Selected = td.AreaLongitudAbreviatura == Model.UnidadLongitud
                        }), new { @class = "selectpicker", @title = "::SELECCIONE::", @data_style="select-with-transition", @data_size=Model.UnidadesLongitud.Count.ToString() })
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">Longitud</label>
                        @Html.TextBoxFor(x => x.AreaLongitud, new { @class = "form-control" })
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">Características</label>
                        @Html.TextAreaFor(x => x.AreaCaracteristicas, new { @class = "form-control" })
                    </div>
                    <div class="checkbox">
                        <label>
                            @*<input type="checkbox" name="optionsCheckboxes"> Activo*@
                            @Html.CheckBoxFor(x => x.AreaEstadoId) Activo
                        </label>
                    </div>

                    <button type="submit" class="btn btn-fill btn-rose">Registrar Socio</button>
                }
                @*</form>*@
            </div>
        </div>
    </div>
</div>