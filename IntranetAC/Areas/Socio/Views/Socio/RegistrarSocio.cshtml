@model IntranetAC.Areas.Socio.Models.SocioModel

@{
    ViewData["Title"] = "Registrar Socio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-icon" data-background-color="rose">
                <i class="material-icons">mail_outline</i>
            </div>
            <div class="card-content">
                <h4 class="card-title">@ViewData["Title"]</h4>
                @using (Html.BeginForm("Insert", "Socio", FormMethod.Post, new { @id = "frmRegistrar" }))
                {
                    <div class="form-group label-floating">
                        <label class="control-label">Nombre</label>
                        @*<input type="text" class="form-control">*@
                        @Html.TextBoxFor(x => x.SocioNombre, new { @class = "form-control" })
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">Apellido Paterno</label>
                        @Html.TextBoxFor(x => x.SocioApellidoPaterno, new { @class = "form-control" })
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">Apellido Materno</label>
                        @Html.TextBoxFor(x => x.SocioApellidoMaterno, new { @class = "form-control" })
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">Tipo Documento</label>
                        @Html.DropDownListFor(x => x.SocioTipoDocumento, Model.TipoDocumento.Select(td => new SelectListItem(){
                            Text = td.TipoDocumentoDesc,
                            Value = td.TipoDocumentoId.ToString(),
                            Selected = td.TipoDocumentoId == Model.SocioTipoDocumento
                    }), new { @class = "selectpicker", @title = "::SELECCIONE::", @data_style="select-with-transition", @data_size=Model.TipoDocumento.Count.ToString() })
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">Número de Documento</label>
                        @Html.TextBoxFor(x => x.SocioNumeroDocumento, new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-fill btn-rose">Registrar Socio</button>
                }
            </div>
        </div>
    </div>
</div>