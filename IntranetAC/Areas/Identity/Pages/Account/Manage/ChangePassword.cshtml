<div class="wrapper wrapper-full-page">
    <div class="full-page lock-page" filter-color="black" data-image="../../../assets/img/lock.jpg">
        <!--   you can change the color of the filter page using: data-color="blue | green | orange | red | purple" -->
        <partial name="_StatusMessage" for="StatusMessage" />
        <div class="content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="card ">
                            <form id="change-password-form" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card-content card-profile">
                                            <div class="card-avatar">
                                                <a href="#pablo">
                                                    <img class="img" src="../../../assets/img/faces/marc.jpg" />
                                                </a>
                                            </div>
                                            <h4 class="card-title text-center">@User.Identity?.Name</h4>
                                            <div class="form-group label-floating">
                                                <label class="control-label" asp-for="Input.OldPassword">Password Antiguo</label>
                                                <input asp-for="Input.OldPassword" class="form-control" />
                                                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>

                                            </div>
                                            <div class="form-group label-floating">
                                                <label class="control-label" asp-for="Input.NewPassword">Password Nuevo</label>
                                                <input asp-for="Input.NewPassword" class="form-control" />
                                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                                            </div>
                                            <div class="form-group label-floating">
                                                <label class="control-label" asp-for="Input.ConfirmPassword">Confirmar Password</label>
                                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                                            </div>
                                        </div>
                                        <div class="card-footer text-center">
                                            <button type="submit" class="btn btn-rose btn-round">Cambiar Password</button>                                           
                                        </div>                                       
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
